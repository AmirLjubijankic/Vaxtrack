<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingTop="20dp">


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Registruj se!"
        android:textSize="36sp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/metropolis_medium"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:text="Unesi tražene podatke koje želite da koristite:"
        android:textSize="15sp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/metropolis_medium"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_text_background"
        android:elevation="10dp"
        android:fontFamily="@font/metropolis_thin"
        android:hint="Korisničko ime"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColorHint="#6C6969"
        android:textSize="20sp"
        android:layout_marginTop="135dp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_text_background"
        android:elevation="10dp"
        android:fontFamily="@font/metropolis_thin"
        android:hint="Email"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColorHint="#6C6969"
        android:textSize="20sp"
        android:layout_marginTop="205dp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_text_background"
        android:elevation="10dp"
        android:fontFamily="@font/metropolis_thin"
        android:hint="Šifra"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColorHint="#6C6969"
        android:textSize="20sp"
        android:layout_marginTop="275dp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_text_background"
        android:elevation="10dp"
        android:fontFamily="@font/metropolis_thin"
        android:hint="Ponovi šifru"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColorHint="#6C6969"
        android:textSize="20sp"
        android:layout_marginTop="345dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="435dp"
        android:text="REGISTRUJ SE"
        android:textSize="24sp"
        android:elevation="10dp"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/base"
        android:textColor="@color/white"
        android:padding="10dp"
        android:fontFamily="@font/metropolis_medium"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="20dp"
        android:textSize="15sp"
        android:layout_marginTop="510dp"
        android:text="Registracijom pristajete na naše Uslove korištenja i Politiku privatnosti."
        android:fontFamily="@font/metropolis_medium"
        />




</RelativeLayout>